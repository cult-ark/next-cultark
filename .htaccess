# Next.js Configuration for Hostinger Web/Cloud Hosting
# Optimized for CultArk application with client-side routing

# Enable compression
<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    # Compress specific file types
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE image/jpeg
    AddOutputFilterByType DEFLATE image/png
    AddOutputFilterByType DEFLATE image/webp
    
    # Compression settings
    <IfModule mod_mime.c>
        # Don't compress compressed files
        SetEnvIfNoCase Request_URI .(?:gif|jpe?g|png|zip|gz|tgz|bz2|sit|rar|pdf|mov|avi|mp4|flv|swf)$ no-gzip dont-vary
    </IfModule>
    
    # Compress level (1-9, 6 is recommended for balance)
    DeflateCompressionLevel 6
</IfModule>

# Enable caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache static files for 1 year
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType application/json "access plus 1 year"
    ExpiresByType application/xml "access plus 1 year"
    ExpiresByType application/rss+xml "access plus 1 year"
    ExpiresByType application/atom+xml "access plus 1 year"
    
    # Cache HTML files for 1 hour (for dynamic content)
    ExpiresByType text/html "access plus 1 hour"
    
    # Cache API responses for 30 minutes
    <FilesMatch "^/api/.*$">
        ExpiresByType application/json "access plus 30 minutes"
    </FilesMatch>
</IfModule>

# Set cache headers
<IfModule mod_headers.c>
    # Cache static files
    <FilesMatch "\.(css|js|svg|ico|jpg|jpeg|png|webp|json)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache HTML files
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # No-cache for API endpoints
    <FilesMatch "^/api/.*$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
    
    # Security headers
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS (uncomment to enable in production)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Next.js routing configuration for Hostinger
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set the main application root to index.html (Next.js)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /index.html [L,QSA]
    
    # Handle API routes properly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} ^/api/.*$
    RewriteRule ^(.*)$ /index.html [L,QSA]
    
    # Handle static files and existing files (don't rewrite)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
</IfModule>

# Error handling
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html
ErrorDocument 502 /index.html
ErrorDocument 503 /index.html

# Security settings
<IfModule mod_security.c>
    # Disable mod_security for Next.js API routes
    <FilesMatch "^/api/.*$">
        SecRuleEngine Off
    </FilesMatch>
</IfModule>

# Performance optimizations
<IfModule mod_mime.c>
    # Add correct MIME types
    AddType application/javascript mjs
    AddType text/css css
    
    # Compress text files
    AddType text/plain .txt
    AddType text/plain .md
</IfModule>

# Disable directory listings
Options -Indexes

# Enable URL rewriting for clean URLs
<IfModule mod_rewrite.c>
    # Remove .html extension
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [L,R=301]
    
    # Add .html to requests without extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^([^\.]+)/$ $1.html [L]
</IfModule>

# Gzip compression fallback (if mod_deflate not available)
<IfModule !mod_deflate.c>
    <IfModule mod_gzip.c>
        mod_gzip_on Yes
        mod_gzip_dechunk Yes
        mod_gzip_keep_file_list No
        mod_gzip_include_file \.(html?|txt|css|js|php|pl)$
        mod_gzip_include_file \.css$
        mod_gzip_include_file \.js$
        mod_gzip_include_file \.php$
        mod_gzip_include_file \.pl$
        mod_gzip_send_vary On
        mod_gzip_minimum_file_size 300
    </IfModule>
</IfModule>

# Performance: ETags
FileETag MTime Size

# Performance: Disable Last-Modified for static assets
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|svg|ico|jpg|jpeg|png|webp)$">
        Header unset Last-Modified
    </FilesMatch>
</IfModule>

# Custom headers for better performance
<IfModule mod_headers.c>
    # Connection keep-alive
    Header set Connection "keep-alive"
    
    # Content security policy (adjust as needed)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; object-src 'none'; base-uri 'self'; form-action 'self'"
</IfModule>